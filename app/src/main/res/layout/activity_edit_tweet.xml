<!-- res/layout/activity_edit_tweet.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTweetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tweet Name" />

    <EditText
        android:id="@+id/editTweetDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tweet Description"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonUpdateTweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Tweet" />
</LinearLayout>
